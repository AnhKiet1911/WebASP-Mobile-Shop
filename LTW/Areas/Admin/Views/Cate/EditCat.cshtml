@model LTW.Models.HangSanXuat

@{
    ViewBag.Title = "EditCat";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-primary">
    <div class="panel-heading text-center">
        <h2>Sửa hãng sản xuất</h2>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("EditCat", "Cate", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.ID, "ID hãng sản xuất", new { @class = "col-md-3" })
                <span class="col-md-8">
                    @Html.DisplayFor(m => m.ID)
                </span>
                @Html.HiddenFor(m => m.ID);
                @Html.ValidationMessageFor(m => m.ID)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.TenHang, "Tên hãng sản xuất", new { @class = "col-md-3" })
                <div class="col-md-5">
                    @Html.TextBoxFor(m => m.TenHang, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(m => m.TenHang)
            </div>
            <div class="form-group">
                <div class="col-md-offset-3">
                    <input type="submit" class="btn btn-success" value="Sửa" />
                </div>
            </div>
        }
    </div>
</div>


