@model LTW.Models.HangSanXuat

@{
    ViewBag.Title = "addCate";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-primary">
    <div class="panel-heading text-center">
        <h2>Thêm hãng sản xuất</h2>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("addCate", "Cate", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.TenHang, "Tên hãng sản xuất", new { @class = "col-md-3"})
                <div class="col-md-4">
                    @Html.TextBoxFor(m => m.TenHang, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(m => m.TenHang)
            </div>
            <div class="form-group">
                <div class="col-md-offset-6">
                    <input type="submit" class="btn btn-success" value="Thêm" />
                </div>
            </div>
        }
    </div>
</div>

